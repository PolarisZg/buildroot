### Specific needs for mac80211_hwsim demonstration
# Basic networking options
CONFIG_NET=y
CONFIG_NETDEVICES=y
# Wireless stack, with 802.11 (WLAN)
CONFIG_WIRELESS=y
CONFIG_WLAN=y
CONFIG_CFG80211=y
CONFIG_MAC80211=y
# 802.11 simulated HW adapters module
CONFIG_MAC80211_HWSIM=m
# Basic tracing support
CONFIG_STACKTRACE_SUPPORT=y
CONFIG_TRACE_IRQFLAGS_SUPPORT=y
CONFIG_TRACING_SUPPORT=y
# Kernel tracing (ftrace)
CONFIG_FTRACE=y
#   Function tracer
CONFIG_FUNCTION_TRACER=y
CONFIG_FUNCTION_GRAPH_TRACER=y
CONFIG_DYNAMIC_FTRACE=y
#   Histogram tracer
CONFIG_HIST_TRIGGERS=y

